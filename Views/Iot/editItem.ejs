<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <%- include('../head') %>
  <meta charset="utf-8">
  <title>Change Product Information</title>
  <link rel="stylesheet" href="/CSS/iot.css"/>
</head>

<body>
  <div id="content">
    <%- include('nav') %>
    <div class="container">
      <div class="container mb-3">
        <h2 class="mb-3">Change Product Information</h2>
      </div>

      <form action="/iot/editSave" method="POST">
        <div class="table-responsive">
          <table class="board-table table">
            <thead class="thead-dark">
            <tr>
              <th>Info List</th>
              <th>Product Info</th>
            </tr>
            </thead>
            <tbody class="table-bg">
            <tr>
              <th>RFID</th>
              <td><input type="text" name="edititem_rfid" id="edititem_rfid" class="box" value="<%= rfid %>" readonly></td>
            </tr>
            <tr>
              <th>Product Name</th>
              <td><input type="text" name="edititem_name" id="edititem_name" class="box"></td>
            </tr>
            <tr>
              <th>Product Quantity</th>
              <td><input type="number" name="edititem_num" id="edititem_num" class="box"></td>
            </tr>
            </tbody>
          </table>
        </div>
        <button type="submit" class="btn btn-primary two_btn">Save</button>
      </form>
      <button class="btn btn-primary two_btn" onclick="location.href='warehousing'">Back</button>
    </div>
  </div>
</body>
<%- include('../footer') %>
</html>
