<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('../head') %>
  <style>
    input:focus {
      outline: none;
      box-shadow: 0 0 0 1.2px #ff8400;
    }

    select:focus {
      outline: none;
      box-shadow: 0 0 0 1px #ff8400;
    }

    input {
      border: 1px solid #d4d4d4;
      height: 35px;
      border-radius: 20px;
      margin-bottom: 20px;
      padding: 5px 15px;
    }

    select {
      border-radius: 20px;
      border: 1px solid #d4d4d4;
      width: 100%;
      height: 35px;
      margin-bottom: 20px;
      padding: 5px 15px;
    }
  </style>
  <script src="/JS/jquery.serializeObject.js"></script>
  <script src="/JS/signUP.js"></script>
</head>

<body class="login-page" style="overflow: hidden;">
  <%- include('../nav_Bar') %>
  <div id="content">
    <div class="page-header clear-filter" filter-color="orange">
      <div class="page-header-image" style="background-image:url(/Image/about_WH.jpg)"></div>
      <div class="container">
        <form role="form" id="regForm" class="registration-form" onsubmit="return false;">
          <h1>Sign up!</h1>
          <h3>Fill in the form below to get instant access:</h3>
          <div>
            <input type="text" id="memberID" name="memberID" placeholder="ID" style="width : 35%;" />
            <input type="button" class="btn btn-primary" name="idCheckButton" id="idCheckButton" value="ID Check"
              style="width : 14%; height : auto;">
            <% if(locals.err) { %>
            <span class="invalid-feedback"><%= locals.err %></span>
            <% } %>
          </div>
          <div>
            <select name="type" id="type" style="width : 50%;">
              <option value="provider">Provider</option>
              <option value="buyer">Buyer</option>
            </select>
          </div>
          <div>
            <input type="text" placeholder="User Name" id="name" name="name" style="width : 50%;">
          </div>
          <div>
            <input type="password" placeholder="Password" id="password" name="password" style="width : 50%;">
          </div>
          <div>
            <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Password Confirm"
              style="width : 35%;">
            <input type="button" class="btn btn-primary" id="passwordCheckButton" name="passwordCheckButton"
              value="PW Check" style="width : 14%; height : auto;">
          </div>
          <div>
            <input type="text" name="email" id="email" placeholder="Email" style="width : 35%;">
            <input type="button" class="btn btn-primary" id="sendAuthCode" value="send auth code"
              style="width :14%;"><br>
            <input type="text" placeholder="auth code" id="authCode" style="width : 35%;">
            <input type="button" class="btn btn-primary" id="codeCheck" value="check" style="width :14%;">
          </div>
          <div>
            <input type="text" placeholder="national" id="national" name="national" style="width :50%;">
          </div>
          <div>
            <input type="text" id="address" name="address" placeholder="Address" style="width : 35%; ">
            <input type="text" id="zipcode" name="zipcode" placeholder="Zip Code" style="width : 15%">
          </div>
          <div>
            <input type="text" name="contactNumber1" placeholder="Phone" style="width : 16.5%;">
            <input type="text" name="contactNumber2" style="width : 16.5%;">
            <input type="text" name="contactNumber3" style="width : 16.5%;">
          </div>
          <div>
            <button type="submit" id="regFormBtn" class="btn btn-primary">Sign Up</button>
          </div>
        </form>
      </div>
      <div class="overlay"></div>

      <!--이미지 위에 글자가 표시되게하기 위한 class -->
      <script src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
      <script>
        function sample4_execDaumPostcode(flag) {
          new daum.Postcode({
            oncomplete: function (data) {
              var roadAddr = data.roadAddress;
              if (flag == 0) {
                document.getElementById("address").value = data.roadAddressEnglish;
              } else {
                document.getElementById("CA").value = data.roadAddressEnglish;
              }
            }
          }).open();
        }
      </script>
    </div>
  </div>
</body>

</html>
